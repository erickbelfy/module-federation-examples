{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": ["coverage", "node_modules"],
  "include": ["./**/*"]
}
